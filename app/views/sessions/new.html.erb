<h1>Please log in</h1>

<div class="shop_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset class="fieldset">
      <!--legend></legend-->
      <div>
        <span class="textBoxWidthName"><%= label_tag :name, 'Email:' %></span>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div>
        <span class="textBoxWidthPassword"><%= label_tag :password, 'Password:' %></span>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
